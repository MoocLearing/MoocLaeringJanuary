@model List<Mooc.DataAccess.Dto.UserView>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Main.cshtml";
}
<div class="row">
    <div class="panel panel-default panel-full">
        <div class="panel-heading panel-heading-padding">
            <h3 class="panel-title">用户列表</h3>

            <div class="panel-options">
                @Html.ActionLink("添加", "Index", null, new { @class = "btn btn-gray" })
            </div>
        </div>
        <div class="panel-body">
            <table class="table  table-striped" id="example-1">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>

                        @*<th>
                            @Html.DisplayNameFor(model => model.CategoryId)
                        </th>*@
                        <th>操作</th>
                    </tr>
                </thead>

                <tbody class="middle-align">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryId)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.UserId }, new { @class = "fa-pencil-square-o", @style = "font-size:20px" }) |
                                @Html.ActionLink(" ", "Delete", new { id = item.UserId }, new { @class = "fa-trash", @style = "font-size:20px" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>


