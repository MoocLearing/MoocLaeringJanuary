@model Mooc.Data.ViewModels.UserRazorView
@{
    Layout = null;
}


<body>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div style="width=100%;text-align:center">

                <h1 style="text-align:center">后台用户登录</h1>
                @Html.ValidationSummary(true, "kkhh                     l.do/c;orvf", new { @Class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName)
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PassWord)
                    @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.PassWord)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RememberMe)
                    @Html.EditorFor(model => model.RememberMe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.RememberMe)
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-default" />
                </div>

            </div>

        }

    </div>
</body>