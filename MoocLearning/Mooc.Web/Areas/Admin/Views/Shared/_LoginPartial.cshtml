@{
    bool isLogin = false;
    String userName = "";
    if (Request.Cookies["username"]!=null)
    {
        userName = Request.Cookies["username"].Value.ToString();
    }

    isLogin = !string.IsNullOrEmpty(userName);
    @*try
    {

    }catch(Exception ex)
    {
        @Url.Content("~/admin/account/index")
    }*@

    

}
@if (isLogin)
{
    <li class="dropdown user-profile">
        <a class="padding-right25" href="#" data-toggle="dropdown">
            欢迎登录：
            <span class="login-user">
                @userName
                <i class="fa-angle-down"></i>
            </span>
        </a>
        <ul class="dropdown-menu user-profile-menu list-unstyled">
            <li>
                <a href="~/Manage/Index">
                    <i class="fa-edit"></i>
                    更改密码
                </a>
            </li>
            <li>
                <a href="@Url.Content("~/Admin/Account/DeleteCookie")">
                    <i class="fa-lock"></i>
                    退出
                </a>
            </li>


        </ul>
    </li>

}
else
{
    <li class=" user-profile">
        @Html.ActionLink("登录", "Login", "Account", routeValues: new { area="admin"}, htmlAttributes: new { @id = "loginLink" })
    </li>
}




