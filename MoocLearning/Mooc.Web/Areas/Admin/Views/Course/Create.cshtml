@using Mooc.Data.Entities;
@model Mooc.Data.ViewModels.CourseView
@{
    ViewBag.Title = "添加课程";
}

<div class="row">

    <div class="panel panel-default col-md-6 col-md-push-3">
        <div class="panel-heading">
            <h3 class="panel-title">添加课程</h3>
        </div>

        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                @Html.LabelFor(m => m.CourseName)
                <div class="col-md-10">
                    <input type="text" id="CourseName" class="form-control" placeholder="请输入课程名称" />
                    @Html.ValidationMessageFor(m => m.CourseName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CourseDetail)
                <div class="col-md-10">
                    <input type="text" id="CourseDetail" class="form-control" placeholder="请输入课程简介" />
                    @Html.ValidationMessageFor(m => m.CourseDetail)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TeacherId, "TeacherNames", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("TeacherId", null, htmlAttributes: new { @class = "form-control", id = "teacherid" })
                    
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CategoryId, "CategoryNames", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control", id = "categoryid" })
                    
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Status)
                <div class="col-md-10">
                    <input type="text" id="status" class="form-control" placeholder="课程状态" />
                    @Html.ValidationMessageFor(m => m.Status)
                </div>
            </div>

            <div class="form-group" style="padding-top: 20px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="提交" onclick="submit()" class="btn btn-success btn-submit" />
                    <input type="button" value="返回" onclick="back()" class="btn btn-danger btn-margin" />
                </div>
            </div>
        </div>

    </div>

</div>
<script>
    function back() {
        window.location.href = "@Url.Content("~/Admin/Course/List")";
    }
</script>
<script>

    function submit() {

        var coursename = $.trim($("#CourseName").val());

        var coursedetail = $.trim($("#CourseDetail").val());

        var teacherid = $.trim($("#teacherid").val());

        var categoryid = $.trim($("#categoryid").val());

        var status = $.trim($("#status").val());





        $.ajax({
            url: "@Url.Content("~/Admin/Course/Save")",
            data: {"CourseName":coursename,"CourseDetail":coursedetail,"TeacherId":teacherid,"CategoryId":categoryid,"Status":status},
            type: "POST",
            dataType: 'json',
            success: function(data) {
                if (data.code == 0) {
                    window.location = "@Url.Content("~/Admin/Course/List")";
                } else {
                    alert(data.msg)
                    return false;
                }
            }
        })

    }
</script>

